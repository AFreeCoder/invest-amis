{
    "type": "page",
    "title": "${fund_company}各类型基金规模占比",
    "body": [
        {
            "type": "chart",
            "api": "http://localhost:8000/finance/fund-company/scale-ratio?company_code=${company_code}",
            "config": {
              "tooltip": {
                "trigger": "item",
                "formatter": "{a} <br/>{b}: {c} ({d}%)"
              },
              "legend": {
                "data": [
                  "股票型基金",
                  "混合型基金",
                  "债券型基金",
                  "指数型基金",
                  "QDII基金",
                  "货币型基金"
                ]
              },
              "series": [
                {
                  "name": "规模（亿）/占比",
                  "type": "pie",
                  "radius": [
                    "0%",
                    "60%"
                  ],
                  "labelLine": {
                    "length": 30
                  },
                  "label": {
                    "formatter": "{a|{a}}{abg|}\n{hr|}\n  {b|{b}：}{c}  {per|{d}%}  ",
                    "backgroundColor": "#F6F8FC",
                    "borderColor": "#8C8D8E",
                    "borderWidth": 1,
                    "borderRadius": 4,
                    "rich": {
                      "a": {
                        "color": "#6E7079",
                        "lineHeight": 22,
                        "align": "center"
                      },
                      "hr": {
                        "borderColor": "#8C8D8E",
                        "width": "100%",
                        "borderWidth": 1,
                        "height": 0
                      },
                      "b": {
                        "color": "#4C5058",
                        "fontSize": 14,
                        "fontWeight": "bold",
                        "lineHeight": 33
                      },
                      "per": {
                        "color": "#fff",
                        "backgroundColor": "#4C5058",
                        "padding": [
                          3,
                          4
                        ],
                        "borderRadius": 4
                      }
                    }
                  },
                  "data": "${scale_ratio}"
                }
              ]
            },
            "replaceChartOption": true,
            "id": "u:3abec3b8f7da",
            "height": "600px"
          }
    ]
}